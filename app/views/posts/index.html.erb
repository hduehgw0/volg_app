<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-gray-900">投稿一覧</h1>
  <% if user_signed_in? %>
    <%= link_to "新規投稿", new_post_path, class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700" %>
  <% end %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @posts.each do |post| %>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <% if post.eyecatch.attached? %>
        <%= image_tag post.eyecatch, class: "h-48 w-full object-cover" %>
      <% else %>
        <div class="h-48 bg-gray-200 flex items-center justify-center">
          <span class="text-gray-500">画像なし</span>
        </div>
      <% end %>
      <div class="p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-2">
          <%= link_to post.title, post_path(post), class: "hover:text-blue-600" %>
        </h2>
        <p class="text-gray-600 mb-4"><%= truncate(post.excerpt, length: 100) %></p>
        <div class="flex items-center justify-between text-sm text-gray-500">
          <span>投稿者: <%= link_to post.user.name, user_path(post.user), class: "hover:text-blue-600" %></span>
          <span><%= post.published_at&.strftime("%Y年%m月%d日") %></span>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @pagy %>
  <div class="mt-8 flex justify-center">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
<% end %>