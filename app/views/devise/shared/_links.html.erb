<div class="text-sm space-y-2">
  <%- if controller_name != 'sessions' %>
    <%= link_to "ログイン", new_session_path(resource_name), class: "text-blue-600 hover:text-blue-800" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div><%= link_to "新規登録", new_registration_path(resource_name), class: "text-blue-600 hover:text-blue-800" %></div>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div><%= link_to "パスワードを忘れた方", new_password_path(resource_name), class: "text-blue-600 hover:text-blue-800" %></div>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div><%= link_to "確認メールを受け取れませんか？", new_confirmation_path(resource_name), class: "text-blue-600 hover:text-blue-800" %></div>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div><%= link_to "アンロック手順を受け取れませんか？", new_unlock_path(resource_name), class: "text-blue-600 hover:text-blue-800" %></div>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <div><%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-blue-600 hover:text-blue-800" %></div>
    <% end %>
  <% end %>
</div>
