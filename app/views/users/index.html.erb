<div class="mb-6">
  <h1 class="text-3xl font-bold text-gray-900">ユーザー一覧</h1>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @users.each do |user| %>
    <div class="bg-white overflow-hidden shadow rounded-lg">
      <div class="p-6">
        <h2 class="text-xl font-bold text-gray-900 mb-2">
          <%= link_to user.name, user_path(user), class: "hover:text-blue-600" %>
        </h2>
        <div class="text-sm text-gray-600 space-y-1">
          <p>投稿数: <%= user.posts.count %>件</p>
          <p>登録日: <%= user.created_at.strftime("%Y年%m月%d日") %></p>
        </div>
        <div class="mt-4">
          <%= link_to "プロフィールを見る", user_path(user), class: "text-blue-600 hover:text-blue-800 text-sm" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @pagy %>
  <div class="mt-8 flex justify-center">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
  </div>
<% end %>
